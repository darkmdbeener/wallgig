- if wallpapers.any?
  %section.wallpaper-list
    - wallpapers.each do |wallpaper|
      %article.wallpaper-list-item{class: "wallpaper-#{wallpaper.purity}"}
        = link_to wallpaper do
          = image_tag wallpaper.thumbnail_image.url, width: 250, height: 188
        .overlay.overlay-left
          %span.label.label-default
            %strong= wallpaper.favourites.size
            %small
              %span.glyphicon.glyphicon-star
        .overlay.overlay-bottom
          #{wallpaper.image_width}x#{wallpaper.image_height}

  - if wallpapers.respond_to? :total_pages
    = link_to_next_page wallpapers, 'Next Page', class: 'btn btn-block btn-default btn-lg', params: params

- else
  %br/
  %br/
  %h2.text-center No search results found :(