.row
  .col-lg-4.col-lg-offset-4
    .page-header
      %h1 Edit settings
      %span.help-block Settings that reflect throughout the entire site.
    = simple_form_for @settings, url: account_settings_path, method: :patch do |f|
      = f.error_notification

      .form-inputs
        .form-group
          %label Purity
          .row
            .col-xs-4.purity-sfw
              = f.input :sfw
            .col-xs-4.purity-sketchy
              = f.input :sketchy
            .col-xs-4.purity-nsfw
              = f.input :nsfw
        = f.input :per_page
        = f.input :infinite_scroll
        = f.association :screen_resolution

      .form-actions
        = f.button :submit, 'Update settings', class: 'btn btn-primary'
