%li{:data => {:comment_id => comment.id}}
  .well.well-sm
    %h5
      = link_to_user comment.user
      %small #{time_ago_in_words comment.created_at} ago
    %p= comment.comment.html_safe
    .text-right
      %small
        = link_to new_comment_report_path(comment) do
          %small.glyphicon.glyphicon-flag
          Report
